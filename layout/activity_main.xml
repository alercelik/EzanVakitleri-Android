            android:textSize="20sp"
            android:textColor="#FFFFFFFF"
            android:layout_alignBottom="@+id/imageView_Current"
            android:layout_toRightOf="@+id/imageView_Current"
            android:layout_toEndOf="@+id/imageView_Current"
            android:textAlignment="center"/>
    </RelativeLayout>

