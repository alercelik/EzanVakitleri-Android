    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/relativeLayout_Current"
        android:background="#88550000"
        android:layout_below="@+id/relativeLayout_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView_Current"
            android:src="@drawable/__le_simge"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Öğle Vakti - 13:15"
            android:id="@+id/nameAndTimeTextView_Current"
            android:textSize="20sp"
            android:textColor="#FFFFFFFF"
            android:layout_alignTop="@+id/imageView_Current"
            android:layout_toRightOf="@+id/imageView_Current"
            android:layout_toEndOf="@+id/imageView_Current"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İkindi Vaktine Kalan Süre:"
            android:id="@+id/nextTimeTextView_Current"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView_Current"
            android:layout_toEndOf="@+id/imageView_Current"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
